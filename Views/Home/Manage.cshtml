@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LibraryWebApp.Models.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Manage Books";
}

<h2>@(Model.BookId.HasValue ? "Edit Book" : "Add Book")</h2>

<form asp-action="@(Model.BookId.HasValue ? "Edit" : "Add")" method="post">
    @if (Model.BookId.HasValue)
    {
        <input type="hidden" asp-for="BookId" />
    }
    <div>
        <label>Title:</label>
        <input asp-for="Title" required />
    </div>
    <div>
        <label>Author:</label>
        <input asp-for="Author" required />
    </div>
    <div>
        <label>Publication Year:</label>
        <input asp-for="PublicationYear" required />
    </div>
    <div class="form-buttons">
        <input type="submit" value="Save" />
    </div>
    <div>
        <a href="@Url.Action("Index", "Home")" class="btn btn-return">Return to Books</a>
    </div>
</form>